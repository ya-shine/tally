%h2.main-title List display of products
.nav-container
  - @products.each do |product|
    %ul.nav-list.js-show
      %span.nav-list__text= product.name
      %span.nav-list__text : Â¥
      %span.nav-list__text= product.price
      %li.nav-list__item
        %span.nav-list__item__text
          = link_to "Edit", "/products/#{product.id}/edit", method: :get
      %li.nav-list__item
        %span.nav-list__item__text
          = link_to "Delete", "/products/#{product.id}", method: :delete
.nav-container
  = button_to "Top page", root_path, method: :get 